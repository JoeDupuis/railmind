<div class="todo-write-tool">
  <div class="todo-header">
    <h3 class="todo-title">üìã Todo List</h3>
    <div class="todo-progress">
      <span class="todo-count"><%= todo_write.completed_count %>/<%= todo_write.total_count %></span>
      <div class="todo-progress-bar">
        <div class="todo-progress-fill" style="width: <%= todo_write.progress_percentage %>%"></div>
      </div>
    </div>
  </div>

  <% if todo_write.in_progress_todos.any? %>
    <div class="todo-section">
      <h4 class="todo-section-title">üîÑ In Progress</h4>
      <ul class="todo-list">
        <% todo_write.in_progress_todos.each do |todo| %>
          <li class="todo-item todo-in-progress">
            <input type="checkbox" class="todo-checkbox" disabled>
            <span class="todo-content"><%= todo.content %></span>
            <span class="todo-priority todo-priority-<%= todo.priority %>"><%= todo.priority %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if todo_write.pending_todos.any? %>
    <div class="todo-section">
      <h4 class="todo-section-title">‚è≥ Pending</h4>
      <ul class="todo-list">
        <% todo_write.pending_todos.each do |todo| %>
          <li class="todo-item todo-pending">
            <input type="checkbox" class="todo-checkbox" disabled>
            <span class="todo-content"><%= todo.content %></span>
            <span class="todo-priority todo-priority-<%= todo.priority %>"><%= todo.priority %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if todo_write.completed_todos.any? %>
    <div class="todo-section">
      <h4 class="todo-section-title">‚úÖ Completed</h4>
      <ul class="todo-list">
        <% todo_write.completed_todos.each do |todo| %>
          <li class="todo-item todo-completed">
            <input type="checkbox" class="todo-checkbox" checked disabled>
            <span class="todo-content"><%= todo.content %></span>
            <span class="todo-priority todo-priority-<%= todo.priority %>"><%= todo.priority %></span>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
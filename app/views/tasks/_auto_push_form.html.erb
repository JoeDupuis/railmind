<div id="auto_push_form">
  <%= form_with model: task, url: update_auto_push_task_path(task), method: :patch, class: "auto-push", data: { turbo_frame: "_top" } do |form| %>
    <%= form.label :auto_push_branch, "Auto Push:", class: "label" %>
    <div id="branch_select_container" class="selector">
      <% branches = task.fetch_branches rescue [] %>
      <%= form.select :auto_push_branch, 
          options_for_select(branches, task.auto_push_branch),
          { include_blank: "Select branch..." },
          class: "select" %>
    </div>
    <%= link_to "â†»", branches_task_path(task), 
        data: { turbo_method: :get },
        class: "button action-button -mini",
        title: "Refresh branches" %>
    <%= form.submit "Save", class: "button action-button -primary -mini" %>
  <% end %>
</div>
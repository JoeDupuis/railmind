<h1>New Task</h1>

<%= form_with(model: [@project, @task]) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :agent_id, "Agent" %><br>
    <%= form.collection_select :agent_id, Agent.all, :id, :name %>
  </div>

  <div data-controller="prompt">
    <%= form.label :prompt %><br>
    <%= form.text_area :prompt, data: { prompt_target: "textarea", action: "keydown->prompt#keydown" } %>
  </div>

  <div>
    <%= form.submit "Launch Task" %>
  </div>
<% end %>

<%= link_to 'Back', project_tasks_path(@project) %>

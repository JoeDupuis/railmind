<div data-controller="inline-edit" 
     data-inline-edit-url-value="<%= task_path(@task) %>"
     data-inline-edit-attribute-value="description"
     data-inline-edit-model-value="task">
  <h1>
    <span data-inline-edit-target="display" data-action="click->inline-edit#startEdit" style="cursor: pointer;">
      <%= @task.description.presence || "Task ##{@task.id}" %>
    </span>
    <div data-inline-edit-target="edit" class="hidden">
      <input type="text" data-inline-edit-target="input" data-action="keydown->inline-edit#keydown" style="font-size: inherit; font-weight: inherit;">
      <button data-inline-edit-target="saveButton" data-action="click->inline-edit#save">Save</button>
      <button data-inline-edit-target="cancelButton" data-action="click->inline-edit#cancel">Cancel</button>
    </div>
  </h1>
</div>

<p>Agent: <%= @task.agent.name %></p>
<p>Project: <%= @task.project.name %></p>
<% if @task.total_cost > 0 %>
  <p>Total Cost: $<%= "%.6f" % @task.total_cost %></p>
<% end %>

<div data-controller="tabs" class="codex-layout">
  <%= turbo_stream_from @task %>
  <div class="nav">
    <button data-tabs-target="tab" data-action="click->tabs#switchTab" data-tab-panel="chat" class="tab chat-tab">Chat</button>
    <button data-tabs-target="tab" data-action="click->tabs#switchTab" data-tab-panel="steps" class="tab -active">Runs</button>
  </div>
  <div data-tabs-target="panel" data-panel-id="chat" class="chat-panel">
    <%= render "tasks/chat_panel", task: @task, runs: @task.runs.order(:created_at) %>
  </div>
  <div data-tabs-target="panel" data-panel-id="steps" class="log-panel -active">
    <% if @task.runs.any? %>
      <%= render "tasks/runs_list", runs: @runs %>
    <% else %>
      <div id="runs-list">
        <p>No runs yet.</p>
      </div>
    <% end %>
  </div>
</div>

<div class="task-actions">
  <%= link_to 'Archive', task_path(@task),
              data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to archive this task?' },
              class: 'archive' %> |
  <%= link_to 'Back', project_tasks_path(@task.project) %>
</div>
<h1>Task <%= @task.id %></h1>

<p>Agent: <%= @task.agent.name %></p>

<h2>New Run</h2>
<%= form_with model: [@project, @task, Run.new], url: project_task_runs_path(@project, @task), data: { turbo: false, controller: "prompt" } do |form| %>
  <div>
    <%= form.label :prompt %><br>
    <%= form.text_area :prompt, required: true, rows: 4, cols: 50, data: { prompt_target: "textarea", action: "keydown->prompt#keydown" } %>
  </div>
  <div>
    <%= form.submit "Run" %>
  </div>
<% end %>

<h2>Runs</h2>
<% if @runs.any? %>
  <% @runs.each do |run| %>
    <div style="border: 1px solid #ccc; padding: 10px; margin: 10px 0;">
      <p>
        <strong>Status:</strong> <%= run.status %>
        <% if run.started_at %>
          | <strong>Started:</strong> <%= run.started_at.strftime("%Y-%m-%d %H:%M:%S") %>
        <% end %>
        <% if run.completed_at %>
          | <strong>Completed:</strong> <%= run.completed_at.strftime("%Y-%m-%d %H:%M:%S") %>
        <% end %>
      </p>
      <p><strong>Prompt:</strong> <%= run.prompt %></p>
      <% if run.steps.any? %>
        <p><strong>Output:</strong></p>
        <div style="background: #f0f0f0; padding: 10px; overflow: auto;">
          <%= render run.steps %>
        </div>
      <% elsif run.status == 'running' %>
        <p><strong>Output:</strong></p>
        <div class="run-spinner-container">
          <div class="spinner"></div>
          Processing...
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>No runs yet.</p>
<% end %>

<%= link_to 'Back', project_tasks_path(@project) %>

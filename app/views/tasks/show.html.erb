<h1>Task <%= @task.id %></h1>

<p>Agent: <%= @task.agent.name %></p>

<h2>Runs</h2>
<% if @task.runs.any? %>
  <% if @task.runs.count > 1 %>
    <div style="margin-bottom: 15px;">
      <% if @show_all_runs %>
        <%= link_to "Show Last Run Only", project_task_path(@project, @task), style: "padding: 8px 16px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;" %>
      <% else %>
        <%= link_to "Show All Runs", project_task_path(@project, @task, show_all_runs: true), style: "padding: 8px 16px; background: #28a745; color: white; text-decoration: none; border-radius: 4px;" %>
      <% end %>
    </div>
  <% end %>
  <%= turbo_stream_from @task %>
  <% @runs.each do |run| %>
    <%= render "tasks/run", run: run %>
  <% end %>
<% else %>
  <p>No runs yet.</p>
<% end %>

<h2>New Run</h2>
<%= form_with model: [@project, @task, Run.new], url: project_task_runs_path(@project, @task), data: { turbo: false, controller: "prompt" } do |form| %>
  <div>
    <%= form.label :prompt %><br>
    <%= form.text_area :prompt, required: true, rows: 4, cols: 50, data: { prompt_target: "textarea", action: "keydown->prompt#keydown" } %>
  </div>
  <div>
    <%= form.submit "Run" %>
  </div>
<% end %>

<%= link_to 'Back', project_tasks_path(@project) %>

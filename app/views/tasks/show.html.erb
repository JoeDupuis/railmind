<h1>Task <%= @task.id %></h1>

<p>Agent: <%= @task.agent.name %></p>
<% if @task.project %>
  <p>Project: <%= @task.project.name %></p>
<% end %>

<h2>Runs</h2>
<% if @task.runs.any? %>
  <% if @task.runs.count > 1 %>
    <div style="margin-bottom: 15px;">
      <% if @show_all_runs %>
        <% if @task.project %>
          <%= link_to "Show Last Run Only", project_task_path(@task.project, @task), style: "padding: 8px 16px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;" %>
        <% else %>
          <%= link_to "Show Last Run Only", task_path(@task), style: "padding: 8px 16px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;" %>
        <% end %>
      <% else %>
        <% if @task.project %>
          <%= link_to "Show All Runs", project_task_path(@task.project, @task, show_all_runs: true), style: "padding: 8px 16px; background: #28a745; color: white; text-decoration: none; border-radius: 4px;" %>
        <% else %>
          <%= link_to "Show All Runs", task_path(@task, show_all_runs: true), style: "padding: 8px 16px; background: #28a745; color: white; text-decoration: none; border-radius: 4px;" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= turbo_stream_from @task %>
  <div id="runs-list">
    <% @runs.each do |run| %>
      <%= render "tasks/run", run: run %>
    <% end %>
  </div>
<% else %>
  <div id="runs-list">
    <p>No runs yet.</p>
  </div>
<% end %>

<h2>New Run</h2>
<%= render "run_form", task: @task, project: @task.project, run: Run.new %>

<% if @task.project %>
  <%= link_to 'Back', project_tasks_path(@task.project) %>
<% else %>
  <%= link_to 'Back', tasks_path %>
<% end %>
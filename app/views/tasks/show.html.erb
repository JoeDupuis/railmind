<h1>Task <%= @task.id %></h1>

<p>Agent: <%= @task.agent.name %></p>
<p>Project: <%= @task.project.name %></p>

<div class="codex-layout">
  <%= turbo_stream_from @task %>
  <%= render "tasks/chat_panel", task: @task, runs: @task.runs.order(:created_at) %>
  <div class="log-panel">
    <% if @task.runs.any? %>
      <% if @task.runs.count > 1 %>
        <div class="run-filter">
          <% if @show_all_runs %>
            <%= link_to "Show Last Run Only", task_path(@task, selected_run_id: @selected_run&.id), class: "action-button -primary" %>
          <% else %>
            <%= link_to "Show All Runs", task_path(@task, show_all_runs: true, selected_run_id: @selected_run&.id), class: "action-button -success" %>
          <% end %>
        </div>
      <% end %>
      <%= render "tasks/runs_list", runs: @runs %>
    <% else %>
      <div id="runs-list">
        <p>No runs yet.</p>
      </div>
    <% end %>
  </div>
</div>

<div class="task-actions">
  <%= link_to 'Archive', task_path(@task),
              data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to archive this task?' },
              class: 'archive' %> |
  <%= link_to 'Back', project_tasks_path(@task.project) %>
</div>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.description.presence || "Task ##{task.id}", task_path(task) %> -
      <%= task.agent.name %>
      <% unless @project %>
        in <%= task.project.name %>
      <% end %>
      (<%= task.created_at.strftime("%m/%d %H:%M") %>)
    </li>
  <% end %>
</ul>
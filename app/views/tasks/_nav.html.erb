<header>
  <nav>
    <ul>
      <li><%= link_to "SummonCircle", root_path, class: (current_page?(root_path) ? "current" : nil) %></li>
      <li><%= link_to "Projects", projects_path, class: (current_page?(projects_path) ? "current" : nil) %></li>
      <li><%= link_to "Agents", agents_path, class: (current_page?(agents_path) ? "current" : nil) %></li>
      <% if authenticated? %>
        <li><%= link_to "Settings", user_settings_path, class: (current_page?(user_settings_path) || current_page?(edit_user_settings_path) ? "current" : nil) %></li>
        <li><%= link_to "Sign out", session_path, data: { turbo_method: :delete } %></li>
      <% end %>
    </ul>
  </nav>
  <div class="task-info">
    <div class="inline-edit">
      <h1>
        <%= render "description", task: @task %>
      </h1>
    </div>
    <div class="task-details">
      <span>Agent: <%= @task.agent.name %></span>
      <span>Project: <%= @task.project.name %></span>
      <% if @task.total_cost > 0 %>
        <span>Total Cost: $<%= "%.6f" % @task.total_cost %></span>
      <% end %>
    </div>
  </div>
</header>
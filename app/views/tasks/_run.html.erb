<div id="<%= dom_id(run) %>" class="run-item">
  <p class="status">
    <strong>Status:</strong> <%= run.status %>
    <% if run.started_at %>
      | <strong>Started:</strong> <%= run.started_at.strftime("%Y-%m-%d %H:%M:%S") %>
    <% end %>
    <% if run.completed_at %>
      | <strong>Completed:</strong> <%= run.completed_at.strftime("%Y-%m-%d %H:%M:%S") %>
    <% end %>
  </p>
  <% if run.steps.any? %>
    <%= render "runs/tabs", run: run, show_chat: local_assigns[:show_chat] %>
  <% elsif run.status == 'running' %>
    <p class="title">Output:</p>
    <div class="run-spinner">
      <div class="spinner"></div>
      Processing...
    </div>
  <% end %>
</div>